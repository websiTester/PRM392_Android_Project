<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tạo lớp học mới"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1F2937"
            android:layout_marginBottom="16dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Tên lớp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputClassName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Khóa học"
            android:textSize="14sp"
            android:textColor="#4B5563"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/radioGroupCourseOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/radioExistingCourse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Có sẵn"
                android:layout_marginEnd="16dp"
                android:checked="true" />

            <RadioButton
                android:id="@+id/radioNewCourse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tạo mới" />
        </RadioGroup>

        <LinearLayout
            android:id="@+id/layoutExistingCourse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Spinner
                android:id="@+id/spinnerExistingCourse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"
                android:layout_marginBottom="16dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutNewCourse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tên khóa học mới">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputNewCourseName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Mô tả khóa học">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputNewCourseDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:lines="3" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btnSubmitCreateClass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tạo lớp"
            android:backgroundTint="#6366F1"
            android:textColor="@android:color/white"
            android:layout_marginTop="24dp" />

    </LinearLayout>
</ScrollView>