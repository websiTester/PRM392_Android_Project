<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="registerModel"
            type="com.example.prm392_android_project.models.truong.RegisterModel" />
        <variable
            name="role"
            type="String"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.RegisterFragment"
        android:background="@drawable/login1_background">

        <ImageView
            android:layout_marginTop="100dp"
            android:id="@+id/imgAccount"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/account_circle_24px"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="MEMBER REGISTER"
            android:textColor="@drawable/login1_link_state"
            android:textSize="24dp"

            app:layout_constraintEnd_toEndOf="@+id/imgAccount"
            app:layout_constraintStart_toStartOf="@+id/imgAccount"
            app:layout_constraintTop_toBottomOf="@+id/imgAccount" />

        <EditText
            android:id="@id/edtUsername"
            android:layout_width="300dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:text="@={registerModel.username}"
            android:textColorHint="#8FB6B0"
            android:textSize="20dp"
            android:background="@drawable/login1_input_background"
            app:layout_constraintEnd_toEndOf="@+id/textView"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <EditText
            android:id="@id/edtPassword"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:text="@={registerModel.password}"
            android:textColorHint="#8FB6B0"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/login1_input_background"
            app:layout_constraintEnd_toEndOf="@+id/edtUsername"
            app:layout_constraintStart_toStartOf="@+id/edtUsername"
            app:layout_constraintTop_toBottomOf="@+id/edtUsername" />

        <EditText
            android:id="@id/edtConfirmPassword"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/login1_input_background"
            android:hint="Confirm Password"
            android:text="@={registerModel.confirmPassword}"
            android:textColorHint="#8FB6B0"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="@+id/edtPassword"
            app:layout_constraintStart_toStartOf="@+id/edtPassword"
            app:layout_constraintTop_toBottomOf="@+id/edtPassword" />

        <RadioGroup
            android:id="@+id/rdoRole"
            role="@={registerModel.roleId}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="@+id/edtConfirmPassword"
            app:layout_constraintStart_toStartOf="@+id/edtConfirmPassword"
            app:layout_constraintTop_toBottomOf="@+id/edtConfirmPassword">

            <RadioButton
                android:id="@+id/rdoTeacher"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Teacher"
                android:layout_weight="1"
                android:checked="true"
                android:textColor="@color/white" />

            <RadioButton
                android:layout_weight="1"
                android:id="@+id/rdoStudent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Student"
                android:textColor="@color/white" />
        </RadioGroup>

        <TextView
            android:id="@+id/btnRegister"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@drawable/button1_text_state"
            android:text="Register"
            android:textSize="20dp"
            android:background="@drawable/login1_button_state"
            app:layout_constraintEnd_toEndOf="@+id/rdoRole"
            app:layout_constraintStart_toStartOf="@+id/rdoRole"
            app:layout_constraintTop_toBottomOf="@+id/rdoRole"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/txtLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/login_link"
            android:textColor="@drawable/login1_link_state"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="@+id/btnRegister"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="@+id/btnRegister"
            app:layout_constraintTop_toBottomOf="@+id/btnRegister" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>


