<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="com.example.prm392_android_project.actionbindings.BindingAdapters"/>
        <variable
            name="task"
            type="com.example.prm392_android_project.models.GroupTask" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="24dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tạo công việc mới"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         />

<!--    <ImageButton-->
<!--        android:id="@+id/btn_close"-->
<!--        android:layout_width="30dp"-->
<!--        android:layout_height="30dp"-->
<!--        android:src="@drawable/ic_close"-->
<!--        android:background="?attr/selectableItemBackgroundBorderless"-->
<!--        android:contentDescription="Đóng"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintTop_toTopOf="parent"-->
<!--        app:tint="@android:color/darker_gray" />-->

    <TextView
        android:id="@+id/label_task_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên công việc"
        android:textColor="@android:color/black"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_title" />

    <EditText
        android:id="@+id/et_task_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/task_item_background"
        android:padding="12dp"
        android:inputType="text"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:text="@={task.title}"
        app:layout_constraintTop_toBottomOf="@+id/label_task_name" />

    <TextView
        android:id="@+id/label_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Điểm"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_task_name" />

    <EditText
        android:id="@+id/et_point"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/task_item_background"
        android:padding="12dp"
        android:inputType="number"
        android:point="@={task.points}"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/label_score" />

    <TextView
        android:id="@+id/label_assign_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phân công cho"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_point" />

    <Spinner
        android:id="@+id/spinner_assign_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/task_item_background"
        android:padding="12dp"
        android:selectedUser="@={task.assignedToId}"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/label_assign_to" />

    <Button
        android:id="@+id/btn_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tạo"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:background="@drawable/task_column_background"
        app:backgroundTint="@null"
        android:minHeight="56dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/spinner_assign_to" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>