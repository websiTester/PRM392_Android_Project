<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.view.View"/>
        <import type="com.example.prm392_android_project.actionbindings.BindingAdapters"/>
        <variable
            name="submission"
            type="com.example.prm392_android_project.models.AssignmentSubmission" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="24dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nộp bài"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/label_already_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{submission.toString()}"
            android:visibility="@{submission.submitLink == null ? View.GONE : View.VISIBLE}"
            android:textColor="@android:color/black"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialog_title" />

        <TextView
            android:id="@+id/label_task_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Link"
            android:textColor="@android:color/black"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label_already_submit" />

        <EditText
            android:id="@+id/et_submission_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/task_item_background"
            android:padding="12dp"
            android:inputType="text"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:text="@={submission.submitLink}"
            android:enabled="@{submission.submitLink == null}"
            app:layout_constraintTop_toBottomOf="@+id/label_task_name" />



        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nộp bài"
            android:visibility="@{submission.submitLink != null ? View.GONE : View.VISIBLE}"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:background="@drawable/task_column_background"
            app:backgroundTint="@null"
            android:minHeight="56dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/et_submission_link" />

        <Button
            android:id="@+id/btn_cancel_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hủy nộp bài"
            android:visibility="@{submission.submitLink == null ? View.GONE : View.VISIBLE}"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:background="@drawable/task_column_background"
            app:backgroundTint="@null"
            android:minHeight="56dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_submit" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>