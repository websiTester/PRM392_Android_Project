<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nộp bài"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/tv_link_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Link nộp bài (Google Drive, Github,...)"
            android:textColor="@android:color/black"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />

        <EditText
            android:id="@+id/et_submission_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập đường dẫn..."
            android:inputType="textUri"
            android:padding="12dp"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:background="@drawable/task_item_background"
            android:text=""
            app:layout_constraintTop_toBottomOf="@+id/tv_link_label" />

        <Button
            android:id="@+id/btn_submit_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nộp bài"
            android:background="@drawable/task_column_background"
            app:backgroundTint="@null"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginTop="32dp"
            android:minHeight="56dp"
            app:layout_constraintTop_toBottomOf="@+id/et_submission_link" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>