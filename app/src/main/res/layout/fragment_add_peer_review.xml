<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="com.example.prm392_android_project.actionbindings.BindingAdapters"/>
        <variable
            name="peerReview"
            type="com.example.prm392_android_project.models.PeerReview" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/task_item_background">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Đánh giá thành viên"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/label_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thành viên"
            android:textColor="@android:color/black"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialog_title" />

        <Spinner
            android:id="@+id/spinner_member"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/task_item_background"
            android:padding="12dp"
            android:selectedUser="@={peerReview.reviewerId}"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/label_member" />

        <TextView
            android:id="@+id/label_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đánh giá"
            android:textColor="@android:color/black"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/star_rating" />

        <EditText
            android:id="@+id/et_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/task_item_background"
            android:padding="12dp"
            android:inputType="text"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:text="@={peerReview.comment}"
            app:layout_constraintTop_toBottomOf="@+id/label_comment" />

        <TextView
            android:id="@+id/label_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Điểm"
            android:textColor="@android:color/black"
            android:layout_marginTop="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinner_member"
            />
        <RatingBar
            android:id="@+id/star_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:progressBackgroundTint="@color/black"
            android:progressTint="@color/yellow"
            android:customrating="@={peerReview.score}"
            android:scaleX="0.4"
            android:scaleY="0.4"
            android:secondaryProgressTint="@color/black"
            android:stepSize="1"
            app:layout_constraintStart_toEndOf="@id/label_rating"
            app:layout_constraintTop_toBottomOf="@+id/spinner_member" />

        <Button
            android:id="@+id/btn_add_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gửi"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:background="@drawable/task_column_background"
            app:backgroundTint="@null"
            android:minHeight="56dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/et_comment" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>