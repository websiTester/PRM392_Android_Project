<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.AssignmentDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/assignment_detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Assignment Detail"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:paddingVertical="8dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <Button
                android:id="@+id/add_task_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:backgroundTint="@null"
                android:text="Add Task"
                android:background="@drawable/task_column_background"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/submit_btn"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_chainStyle="spread" />

            <Button
                android:id="@+id/submit_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:backgroundTint="@null"
                android:text="Submit"
                android:background="@drawable/task_column_background"
                app:layout_constraintStart_toEndOf="@+id/add_task_btn"
                app:layout_constraintEnd_toStartOf="@+id/feedback_btn"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_chainStyle="spread" />

            <Button
                android:id="@+id/feedback_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:backgroundTint="@null"
                android:text="Feedback"
                android:background="@drawable/task_column_background"
                app:layout_constraintStart_toEndOf="@+id/submit_btn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_chainStyle="spread" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- To do -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="To do:"
            android:textColor="@android:color/black"
            android:paddingVertical="4dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/todo_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/task_column_background" />

        <!-- Doing -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Doing:"
            android:textColor="@android:color/black"
            android:paddingVertical="4dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/doing_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/task_column_background" />

        <!-- Done -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Done:"
            android:textColor="@android:color/black"
            android:paddingVertical="4dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/done_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/task_column_background" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/chart1"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="36dp"
            android:layout_above="@+id/seekBar1" />


    </LinearLayout>
</ScrollView>
